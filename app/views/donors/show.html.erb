<p id="notice"><%= notice %></p>

<div class="row expanded info-title-bar title-info-bar">
  <div class="text-center fnt-aladin">
    <span>
      Donor's information
    </span>               
  </div> 
</div> 

<div class="row">
  <div class="small-12  medium-11 medium-centered large-12 columns">
    <div class="show-info text-center">
      <p>
        <span>
          <i class="fa fa-user" aria-hidden="true"></i>
        </span>
        <strong>Name: </strong>
        <span>        
          <%= @donor.user.firts_name%>
          <%= current_user.last_name %>
        </span>
      </p>
      <p>
        <span>
          <i class="fa fa-envelope" aria-hidden="true"></i>
        </span>
        <strong>Username: </strong>
        <span>
          <%= @donor.user.email %>          
        </span>
      </p>
    </div>
  </div>
</div>

<div class="row">
	<div class="small-12  medium-10 medium-centered large-12 columns">
		<%= link_to new_donor_key_donor_path(@donor), class: 'button btn-radius-10' do %>
	      <i class="fa fa-pencil" aria-hidden="true"></i>
	      Donation
	    <% end %>
	</div>
</div>

<div class="row">
	<div class="small-12  medium-10 medium-centered large-12 columns">
		<%= link_to edit_donor_path(@donor), class: 'button btn-radius-10' do %>
	      <i class="fa fa-pencil" aria-hidden="true"></i>
	      Edit
	    <% end %>
	</div>
</div>
