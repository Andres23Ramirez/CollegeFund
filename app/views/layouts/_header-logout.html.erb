<div class="off-canvas-wrapper">
  <div class="off-canvas-wrapper-inner" data-off-canvas-wrapper>

    <!-- off-canvas title bar for 'small' screen -->
    <div id="responsive-title-bar" class="title-bar" data-responsive-toggle="widemenu" data-hide-for="medium">
      <div class="title-bar-left">
        <button class="menu-icon" type="button" data-open="offCanvasLeft"></button>
          <span id="logo-header" class="fnt-great-vibes">CollegeFund.me</span>        
      </div>      
    </div>

    <!-- off-canvas left menu -->
    <div class="off-canvas position-left responsive-bar-left" id="offCanvasLeft" data-off-canvas>
      <ul class="vertical dropdown menu" data-dropdown-menu>
        <li><a href="left_item_1">About</a></li>
        <li><a href="left_item_2">Help</a></li>
        <li><a href="left_item_3">Sign in</a></li>
      </ul>
    </div>

    <!-- "wider" top-bar menu for 'medium' and up -->
    <div id="widemenu" class="top-bar">
      <div class="top-bar-left">
        <ul class="menu">
          <li id="logo-header" class="fnt-great-vibes menu-text">
            <a href="#">
              <i class="fa fa-graduation-cap" aria-hidden="true"></i>
              CollegeFund.me
            </a>
          </li>
          <li>
            <a href="#">About</a>           
          </li>
          <li>
            <a href="#">Help</a>            
          </li>
        </ul>
      </div>
      <div class="top-bar-right">
        <ul class="menu">
          <li>
            <%= link_to "Sign In", new_user_session_path, method: :new, class: 'hollow button btn-header-lg' %>            
          </li>
          <li>
            <%= link_to "Sign Up", new_user_registration_path, method: :get, class: 'hollow button btn-header-lg' %>
          </li>          
        </ul>
      </div>
    </div>
  </div>
</div>