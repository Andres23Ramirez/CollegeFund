          <th>Birthdate</th>
          <th>Username</th>
          <th>Goal</th>
          <th>Parent</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student| %>
        	@student = student
          <tr>
            <td><%= student.birthdate %></td>
            <td><%= student.username %></td>
            <td><%= student.goal %></td>
            <td><%= student.parent %></td>
            <td>
              <%= link_to student, class: 'button small hollow btn-radius-10' do %>
                <i class="fa fa-eye" aria-hidden="true"></i>
                show
              <% end %>                
            </td>
            <td>
              <%= link_to @parent, class: 'button small hollow btn-radius-10' do %>
                <i class="fa fa-plus" aria-hidden="true"></i>
                add
              <% end %>              
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to new_student_path, class: 'button btn-radius-10' do %>
      <i class="fa fa-plus" aria-hidden="true"></i>
      New 
    <% end %>
    <%= link_to edit_parent_path(@parent), class: 'button btn-radius-10' do %>
      <i class="fa fa-pencil" aria-hidden="true"></i>
      Edit
    <% end %>
  </div>
</div>
