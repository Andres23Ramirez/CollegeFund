<h1>New Key Donor</h1>



 <div class="row expanded info-title-bar title-info-bar">
  <div class="text-center fnt-aladin">
    <span>
      <div class="field">
      <%= label_tag :Donor %>
      <%= @donor.user.firts_name%> <%= @donor.user.last_name %>
      </div>
    </span>               
  </div>
</div> 

 <div class="row expanded info-title-bar title-info-bar">
  <div class="text-center fnt-aladin">
    <span>
      Students
    </span>               
  </div>
</div>  
<div class="row">
  <div class="small-12  medium-10 medium-centered large-12 columns">
    <table>
      <thead>
        <tr>
          <th>Birthdate</th>
          <th>Username</th>
          <th>Goal</th>
          <th>Parent</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student| %>
        	
          <tr>
            <td><%= student.birthdate %></td>
            <td><%= student.username %></td>
            <td><%= student.goal %></td>
            <td><%= student.parent %></td>
            <td>
              <%= link_to student, class: 'button small hollow btn-radius-10' do %>
                <i class="fa fa-eye" aria-hidden="true"></i>
                show
              <% end %>                
            </td>
            <td>
              <%= link_to @parent, class: 'button small hollow btn-radius-10' do %>
                <i class="fa fa-plus" aria-hidden="true"></i>
                Select
              <% end %>              
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>    
  </div>
</div>

<div class="field">
    <%= label_tag :relationship %>
    <%= text_field_tag :relationship %>
 </div>

 <div class="actions">
    <%= submit_tag %>
  </div>



<%= link_to 'Back', key_donors_path %>
