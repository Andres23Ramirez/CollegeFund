<div class="row">
  <div class="small-12  medium-6 medium-centered large-5 large-centered columns">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <div id="border-field" class="row column"> 
      <div id="title" class="text-center fnt-aladin">
        <span>Sign up</span>
      </div>
      <div class="button-group">
        <%= link_to  user_facebook_omniauth_authorize_path, class: 'button expanded btn-facebook' do%>
          <i class="fa fa-facebook pull-left" aria-hidden="true"></i>
          <b>Sign up </b>with<b> Facebook</b>
        <% end %>
        <%= button_tag( :class => "button expanded btn-google-plus") do %>
          <i class="fa fa-google-plus pull-left" aria-hidden="true"></i>
          <b>Sign up </b>with<b> Google +</b>
        <% end %>
        <%= button_tag( :class => "button expanded btn-twitter") do %>
          <i class="fa fa-twitter pull-left" aria-hidden="true"></i>
          <b>Sign up </b>with<b> Twitter</b>
        <% end %>         
      </div>
      <div class="row column log-in-form">
        <div class="text-center fnt-aladin divider">
          <strong class="divider-title">Or</strong>
        </div>         
        <div class="input-group">
          <%= f.label :firts_name, class: 'input-group-label' do%>
            <i class="fa fa-pencil"></i>
          <%- end -%>
          <%= f.text_field :firts_name, autofocus: true, placeholder: "Enter your name", class: 'input-group-field' %>
        </div>
        <div class="input-group">
          <%= f.label :last_name, class: 'input-group-label' do%>
            <i class="fa fa-pencil"></i>
          <%- end -%>
          <%= f.text_field :last_name, autofocus: true, placeholder: "Enter your last name", class: 'input-group-field' %>
        </div>           
        <div class="input-group">
          <%= f.label :email, class: 'input-group-label' do%>
            <i class="fa fa-user"></i>
          <%- end -%>
          <%= f.email_field :email, autofocus: true, placeholder: "Enter your email" ,class: 'input-group-field' %>
        </div>
        <div class="input-group">
          <%= f.label :password, class: 'input-group-label' do %>
            <i class="fa fa-lock"></i>
          <%- end -%>    
          <%= f.password_field :password, autocomplete: "off", placeholder: "Enter your password" ,class: 'input-group-field' %>
        </div>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <div class="input-group">
          <%= f.label :password_confirmation, class: 'input-group-label' do %>
            <i class="fa fa-lock"></i>
          <%- end -%>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm your password" ,class: 'input-group-field' %>
        </div>
        <div class="actions">
          <%= f.submit "Sign up", class: "button expanded" %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>