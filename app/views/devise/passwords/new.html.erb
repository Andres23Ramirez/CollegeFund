<div class="row">
  <div class="medium-6 medium-centered large-5 large-centered columns">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
<div id="border-field" class="row column">    
      <div id="title" class="text-center fnt-aladin">
        <span>Forgot your password?</span>
      </div>
  <div class="input-group">
    <%= f.label :email, class: 'input-group-label' do %>
    	<i class="fa fa-user"></i>
  <%- end -%>
    <%= f.email_field :email, autofocus: true, placeholder: "Enter your email" ,class: 'input-group-field' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "button expanded"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
