<div class="row">
  <div class="small-12 medium-6 medium-centered large-5 large-centered columns">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {abide: ''}) do |f| %>
    <div id="border-field" class="row column">    
      <div id="title" class="text-center fnt-aladin">
        <span>Sign in</span>
      </div>
      <div class="button-group">
        <%= link_to  user_facebook_omniauth_authorize_path, class: 'button expanded btn-facebook' do%>
          <i class="fa fa-facebook pull-left" aria-hidden="true"></i>
          <b>Log in </b>with<b> Facebook</b>
        <% end %>
        <%= button_tag( :class => "button expanded btn-google-plus") do %>
          <i class="fa fa-google-plus pull-left" aria-hidden="true"></i>
          <b>Log in </b>with<b> Google +</b>
        <% end %>
        <%= button_tag( :class => "button expanded btn-twitter") do %>
          <i class="fa fa-twitter pull-left" aria-hidden="true"></i>
          <b>Log in </b>with<b> Twitter</b>
        <% end %>         
      </div>
      <div class="row column log-in-form">
        <div class="text-center fnt-aladin divider">
          <strong class="divider-title">Or</strong>
        </div>  
        <div class="input-group">
          <%= f.label :email, class: 'input-group-label' do %>
            <i class="fa fa-user"></i>
          <%- end -%>
          <%= f.email_field :email, autofocus: true, placeholder: "Enter your email" ,class: 'input-group-field', required:'' %>   
        </div>
        <div class="input-group">
          <%= f.label :password, class: 'input-group-label' do %>
            <i class="fa fa-lock"></i>
          <%- end -%>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Enter your password" ,class: 'input-group-field', required:'' %>
        </div>
        <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <% end -%>
        <div class="actions">
          <%= f.submit "Log in", class: "button expanded" %>
        </div>  
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>