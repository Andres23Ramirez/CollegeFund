<p id="notice"><%= notice %></p>
<div class="row expanded info-title-bar title-info-bar">
  <div class="text-center fnt-aladin">
    <span>
      Donations
    </span>               
  </div>
</div>
<div class="row">
  <div class="small-12  medium-10 medium-centered large-12 columns">
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Amount</th>
          <th>Note</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @donations.each do |donation| %>
          <tr>
            <td><%= donation.date %></td>
            <td><%= donation.amount %></td>
            <td><%= donation.note %></td>
            <td>
              <%= link_to donation, class: 'button small hollow btn-radius-10' do %>
                <i class="fa fa-eye" aria-hidden="true"></i>
                show
              <% end %>            
            </td>
            <td>
              <%= link_to edit_donation_path(donation), class: 'button small hollow btn-radius-10' do %>
                <i class="fa fa-pencil" aria-hidden="true"></i>
                edit
              <% end %>            
            </td>
            <td>
              <%= link_to donation, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button small hollow btn-radius-10' do %>
                <i class="fa fa-trash" aria-hidden="true"></i>
                delete
              <% end %>            
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to new_donation_path, class: 'button btn-radius-10' do %>
      <i class="fa fa-plus" aria-hidden="true"></i>
      New 
    <% end %>
  </div>
</div>
