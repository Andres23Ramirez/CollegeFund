<p id="notice"><%= notice %></p>
<div class="row expanded info-title-bar title-info-bar">
  <div class="text-center fnt-aladin">
    <span>
      Donation's information
    </span>               
  </div>
</div> 
<div class="row">
  <div class="small-12  medium-11 medium-centered large-9 large-centered columns">
    <div class="show-info">
    	<%= render 'layouts/logo-welcome' %>
    	<div class="row">
			<div class="small-12 medium-8 medium-centered large-9 large-centered divider-msg-bottom">
				<div class="text-center fnt-aladin divider fnt-msg-size">
				    <span class="divider-title">
				      Message
				    </span>               
				</div>
				<p class="text-center">
				  <span>
				  	<%= @donation.note %>
				  </span>		  
				</p>
			</div>				
		</div>
    	<div class="row text-center">
			<div class="small-12 medium-12 large-6 columns">
				<p class="donation-text">
				  <span>
		            <i class="fa fa-calendar" aria-hidden="true"></i>
			      </span>
				  <strong>Date:</strong>
				  <span>
				  	<%= @donation.date %>
				  </span>		  
				</p>								
			</div>  
			<div class="small-12 medium-12 large-6 columns">
				<p class="donation-text">
					<span>
		            	<i class="fa fa-money" aria-hidden="true"></i>
			      	</span>
					<strong>Amount: $</strong>
					<span>
						<%= @donation.amount %>
					</span>		  
				</p>
			</div> 	
			<%= link_to edit_donation_path(@donation), class: 'button btn-radius-10 btn-visited' do %>
			  <i class="fa fa-pencil" aria-hidden="true"></i>
			  Edit
			<% end %>	
    	</div>			
    </div>
  </div>
</div>
